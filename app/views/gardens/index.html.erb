<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= image_path('home_banner.jpg') %>)">
  <div class="container">
    <h1>Mon Jardin</h1>
    <p>Gères tes jardins, ajoute des plantes et regarde les grandir</p>
    <%= link_to "Discover", "#how", class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="section">
    <h2 id="how" class="text-center">Comment ça marche?</h2>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to new_garden_path do %>
          <div class="icon">
            <%= image_tag "garden.svg" %>
          </div>
        <% end %>
        <p class="text-center fs-24">Crée ton jardin</p>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to new_garden_path do %>
          <div class="icon">
            <%= image_tag "circles.svg" %>
          </div>
        <% end %>
        <p class="text-center fs-24">Ajoute une plante</p>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to new_garden_path do %>
          <div class="icon">
            <%= image_tag "watering.svg" %>
          </div>
        <% end %>
        <p class="text-center fs-24">Gère ton activité quotidienne</p>
      </div>
    </div>
  </div>
  <div class="section">
    <h2 class="text-center">Notre communauté des plus beaux jardins</h2>
    <div class="cards">
      <% @gardens.each do |garden| %>
        <%= render "garden_card", garden: garden %>
      <% end %>
    </div>
  </div>
  <div class="section">
    <div class="text-center">
      <%= link_to "Create my garden", new_garden_path, class: "btn btn-flat" %>
    </div>
  </div>
</div>
